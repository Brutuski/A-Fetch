#Name:                AFetch
#Desc:                 **A**nother Fetch for Linux
#URL:                  https://github.com/Brutuski/A-Fetch
#Maintainer:       Adhiraj Sirohi

name=afetch
version=git
release=1
source=()

build() {
    cd "${PKGMK_SOURCE_DIR}"

    if cd "${name}"; then
        git fetch -q
        get reset --hard origin/master
    else
        git clone https://github.com/Brutuski/a-fetch "${name}"
        cd "${name}"
    fi

    gcc afetch-arch.c -o /usr/bin/afetch/afetch
}